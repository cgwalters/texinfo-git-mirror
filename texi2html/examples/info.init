    $result .= "$Texi2HTML::THISDOC{'copying_comment'}";
    $info_default_offset_in_file = length($result);
    @info_default_pending_tags = ();
    info_default_reset_stack();
    print $fh $result;
}

my $info_default_paragraph_in_element_nr;
